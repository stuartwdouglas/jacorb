<?xml version="1.0"?>

<project name="wchar_jac" default="compile" basedir="../../../..">

    <!-- ==================================================== -->
    <!--             test build file                          -->
    <!-- ==================================================== -->

    <target name="init">
        <property name="name" value="interop/wchar_tao_interop/jacorb" />
        <property name="dirs.base" value="${basedir}" />
        <property name="classdir" value="${dirs.base}/classes" />
        <property name="lib" value="${dirs.base}/lib" />
        <property name="include" value="${dirs.base}/idl" />
        <property name="idlflags" value="-I${include}/omg -ir  -d ${dirs.base}/test/${name}/generated" />
    </target>

    <target name="compile" depends="init, idl">
        <javac destdir="${classdir}">
            <src path="${dirs.base}/test/${name}/src" />
            <src path="${dirs.base}/test/${name}/generated" />
        </javac>
    </target>

    <target name="clean" depends="init">
        <delete dir="${classdir}/wchar_tao_interop" />
        <delete dir="${dirs.base}/test/${name}/generated" />
    </target>

    <target name="idl" depends="init">
        <java classname="org.jacorb.idl.parser" fork="yes" classpath="${lib}/idl.jar;${java.class.path}">
            <arg line="${idlflags} ${dirs.base}/test/interop/wchar_tao_interop/Echo.idl" />
        </java>
    </target>

</project>
